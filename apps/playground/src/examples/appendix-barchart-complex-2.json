{
  "widget": {
    "backgroundColor": "#FFFFFF",
    "borderRadius": 32,
    "padding": 24,
    "aspectRatio": 1,
    "root": {
      "type": "container",
      "direction": "col",
      "gap": 24,
      "flex": 1,
      "children": [
        {
          "type": "container",
          "direction": "row",
          "alignMain": "between",
          "alignCross": "center",
          "children": [
            {
              "type": "container",
              "direction": "col",
              "children": [
                { "type": "leaf", "component": "Text", "props": { "fontSize": 22, "fontWeight": 700, "color": "#000000" }, "content": "Sales Report" },
                { "type": "leaf", "component": "Text", "props": { "fontSize": 14, "color": "#8E8E93" }, "content": "This Week vs Last Week" }
              ]
            },
            {
              "type": "container",
              "paddingY": 8,
              "paddingX": 12,
              "backgroundColor": "#F2F2F7",
              "props": { "style": { "borderRadius": 12 } },
              "children": [
                {
                  "type": "container",
                  "direction": "row",
                  "gap": 4,
                  "alignCross": "center",
                  "children": [
                    { "type": "leaf", "component": "Text", "props": { "fontSize": 14, "fontWeight": 700, "color": "#34C759" }, "content": "+12.5%" },
                    { "type": "leaf", "component": "Icon", "props": { "name": "sf:arrow.up.right", "size": 12, "color": "#34C759" } }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "container",
          "flex": 1,
          "children": [
            {
              "type": "leaf",
              "component": "BarChart",
              "props": {
                "data": [
                  [4500, 5200, 4800, 6100, 7500, 8200, 6900],
                  [3800, 4100, 4300, 5000, 5800, 6200, 5500]
                ],
                "colors": ["#007AFF", "#E5E5EA"],
                "labels": ["M", "T", "W", "T", "F", "S", "S"],
                "showXAxisLabels": true,
                "showYAxisLabels": false,
                "showGrid": false,
                "barWidth": 8,
                "barGap": 4,
                "borderRadius": 4,
                "height": "100%"
              }
            }
          ]
        },
        {
          "type": "container",
          "direction": "row",
          "alignMain": "center",
          "gap": 24,
          "children": [
            {
              "type": "container",
              "direction": "row",
              "alignCross": "center",
              "gap": 8,
              "children": [
                { "type": "container", "width": 8, "height": 8, "backgroundColor": "#007AFF", "props": { "style": { "borderRadius": 4 } } },
                { "type": "leaf", "component": "Text", "props": { "fontSize": 12, "fontWeight": 600, "color": "#8E8E93" }, "content": "This Week" }
              ]
            },
            {
              "type": "container",
              "direction": "row",
              "alignCross": "center",
              "gap": 8,
              "children": [
                { "type": "container", "width": 8, "height": 8, "backgroundColor": "#E5E5EA", "props": { "style": { "borderRadius": 4 } } },
                { "type": "leaf", "component": "Text", "props": { "fontSize": 12, "fontWeight": 600, "color": "#8E8E93" }, "content": "Last Week" }
              ]
            }
          ]
        }
      ]
    }
  }
}
