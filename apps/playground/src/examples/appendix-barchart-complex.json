{
  "widget": {
    "backgroundColor": "#1C1C1E",
    "borderRadius": 24,
    "padding": 24,
    "aspectRatio": 1,
    "root": {
      "type": "container",
      "direction": "col",
      "gap": 20,
      "flex": 1,
      "children": [
        {
          "type": "container",
          "direction": "row",
          "alignMain": "between",
          "alignCross": "center",
          "children": [
            {
              "type": "container",
              "direction": "col",
              "children": [
                { "type": "leaf", "component": "Text", "props": { "fontSize": 14, "color": "#8E8E93", "fontWeight": 600, "textTransform": "uppercase" }, "content": "Total Balance" },
                { "type": "leaf", "component": "Text", "props": { "fontSize": 28, "fontWeight": 700, "color": "#FFFFFF" }, "content": "$12,450.00" }
              ]
            },
            {
              "type": "container",
              "direction": "row",
              "alignCross": "center",
              "gap": 4,
              "padding": 6,
              "paddingX": 12,
              "paddingY": 6,
              "backgroundColor": "rgba(52, 199, 89, 0.2)",
