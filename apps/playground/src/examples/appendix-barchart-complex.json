                "color": "#0A84FF",
                "backgroundColor": "transparent",
                "barBorderRadius": 6,
                "showXAxisLabels": true,
                "showYAxisLabels": true,
                "showValues": false,
                "height": "100%",
                "theme": "dark",
                "showXAxisTicks": false,
                "showYAxisTicks": true,
                "tickLineStyle": "dashed",
                "tickLineColor": "rgba(255,255,255,0.1)",
                "yAxisTickCount": 4,
                "xAxisLabelPosition": "bottom"
