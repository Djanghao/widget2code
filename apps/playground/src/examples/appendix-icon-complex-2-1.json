{
  "widget": {
    "backgroundColor": "#000000",
    "borderRadius": 20,
    "padding": 24,
    "aspectRatio": 1,
    "root": {
      "type": "container",
      "direction": "col",
      "gap": 16,
      "flex": 1,
      "props": { "style": { "border": "1px solid #333", "background": "linear-gradient(135deg, #000 0%, #111 100%)" } },
      "children": [
        {
          "type": "container",
          "direction": "row",
          "alignMain": "between",
          "children": [
            { "type": "leaf", "component": "Text", "props": { "fontSize": 16, "fontWeight": 700, "color": "#00FF9D", "fontFamily": "monospace" }, "content": "STATUS" },
            { "type": "leaf", "component": "Icon", "props": { "name": "sf:exclamationmark.triangle.fill", "size": 20, "color": "#FF0055" } }
          ]
        },
        {
          "type": "container",
          "flex": 1,
          "alignMain": "center",
          "alignCross": "center",
          "children": [
            {
              "type": "container",
              "padding": 24,
              "props": { "style": { "border": "2px solid #00FF9D", "borderRadius": "50%", "boxShadow": "0 0 20px rgba(0, 255, 157, 0.3)" } },
              "children": [
                { "type": "leaf", "component": "Icon", "props": { "name": "sf:lock.shield.fill", "size": 64, "color": "#00FF9D" } }
              ]
            }
          ]
        },
        {
          "type": "leaf",
          "component": "Text",
          "props": { "fontSize": 14, "color": "#00FF9D", "fontFamily": "monospace", "textAlign": "center" },
          "content": "SECURE_CONNECTION"
        }
      ]
    }
  }
}
