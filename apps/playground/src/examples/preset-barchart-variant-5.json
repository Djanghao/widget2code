{
  "widget": {
    "backgroundColor": "#0D1117",
    "borderRadius": 20,
    "padding": 24,
    "aspectRatio": 1,
    "root": {
      "type": "container",
      "direction": "col",
      "gap": 14,
      "flex": 1,
      "children": [
        {
          "type": "leaf",
          "component": "Text",
          "props": { "fontSize": 20, "fontWeight": 600, "color": "#C9D1D9" },
          "content": "Code Commits"
        },
        {
          "type": "leaf",
          "component": "Text",
          "props": { "fontSize": 12, "fontWeight": 400, "color": "#8B949E" },
          "content": "Custom axis positioning"
        },
        {
          "type": "leaf",
          "component": "BarChart",
          "props": {
            "data": [12, 25, 18, 32, 28, 15, 8],
            "labels": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
            "color": "#56D364",
            "backgroundColor": "transparent",
            "barBorderRadius": 5,
            "showXAxisLabels": true,
            "showYAxisLabels": true,
            "xAxisLabelPosition": "top",
            "yAxisLabelPosition": "right",
            "showValues": false,
            "height": "100%",
            "theme": "dark",
            "showXAxisTicks": true,
            "showYAxisTicks": true,
            "tickLineStyle": "dashed",
            "tickLineColor": "rgba(139, 148, 158, 0.15)",
            "yAxisTickCount": 4
          }
        }
      ]
    }
  }
}
